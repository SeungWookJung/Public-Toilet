<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="건의하기"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="화장실 이름 : "
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="bottom|right"

                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:textColor="#ffffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/crowdToiletName"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="화장실 개수 : "
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center|right"

                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="bottom">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:textSize="15dp"
                android:text="남 소변기"/>

                <Spinner
                    android:id="@+id/manspinner"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/toiletNumber"></Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="남 대변기"/>
                <Spinner
                    android:entries="@array/toiletNumber"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/manspinner2"
                    >


            </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="여자 화장실"/>
                <Spinner
                    android:entries="@array/toiletNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/womanspinner"
                    >
                </Spinner>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="화장실 주소 : "
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center|right"

                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:textColor="#ffffffff"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/crowdaddress"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="화장실 위치 : "
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center|right"

                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="지도 화장실 위치 클릭"
                android:textStyle="bold"
                android:id="@+id/checkToilet"
                android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="기타정보 : "
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center|right"

                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:textColor="#ffffffff"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/crowdetc"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="건의하기"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/suggestion"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="취소"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/cancel"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>